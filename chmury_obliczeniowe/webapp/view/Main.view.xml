<mvc:View controllerName="chm.obl.chmuryobliczeniowe.controller.Main" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m">
    <Page title="{i18n>title}" showHeader="false">
        <content>
            <HBox justifyContent="End" alignItems="Center" width="100%" id="avatar--container">
                <Avatar displaySize="XS" displayShape="Circle" class="sapUiSmallMarginEnd sapUiSmallMarginTop" showBorder="true" backgroundColor="Accent9" press="onAvatarPress" />
            </HBox>
            <HBox>
                <GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop" header="{i18n>clients}" press="onOpenClientsView" frameType="OneByHalf"/>
                <GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop" header="{i18n>devices}" press="onOpenDevicesView" frameType="OneByHalf"/>
                <GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop" header="{i18n>repairs}" press="onOpenServicesView" frameType="OneByHalf"/>
            </HBox>
        </content>
    </Page>
</mvc:View>
