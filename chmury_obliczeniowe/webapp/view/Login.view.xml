<mvc:View controllerName="chm.obl.chmuryobliczeniowe.controller.Login" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m">
    <Page title="{i18n>title}" showHeader="false">
        <content>
            <HBox justifyContent="SpaceBetween" width="100%" class="tiny-padding" height="10%">
                <Button icon="sap-icon://nav-back" press="onNavBack" />
            </HBox>
            <HBox justifyContent="Center" alignItems="Center" width="100%" height="90%">
                <VBox class="login-dialog--container">
                    <VBox class="sapUiSmallMarginBottom">
                        <Label text="{i18n>userName}" />
                        <Input valueLiveUpdate="true" liveChange="onLoginValueChange" fieldGroupIds="isLoginFilled" value="{loginViewModel>/userLogin}" />
                    </VBox>
                    <VBox class="sapUiSmallMarginBottom">
                        <Label text="{i18n>userPassword}" />
                        <Input type="Password" valueLiveUpdate="true" liveChange="onLoginValueChange" fieldGroupIds="isPasswordFilled" value="{loginViewModel>/userPawssword}" />
                    </VBox>
                    <HBox width="100%" justifyContent="End">
                        <Button text="{i18n>login}" type="Emphasized" enabled="{= ${loginViewModel>/isLoginFilled} &amp;&amp; ${loginViewModel>/isPasswordFilled} ? true : false}" />
                    </HBox>
                </VBox>
            </HBox>
        </content>
    </Page>
</mvc:View>
