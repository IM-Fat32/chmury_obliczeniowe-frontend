<mvc:View controllerName="chm.obl.chmuryobliczeniowe.controller.Services" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m">
    <Page title="{i18n>title}" showHeader="false">
        <content>
            <HBox justifyContent="SpaceBetween" alignItems="Center" width="100%" id="avatar--container">
                <HBox width="100%" class="sapUiTinyMarginBegin">
                    <Button icon="sap-icon://nav-back" press="onNavBack" class="sapUiSmallMarginEnd" />
                    <Button text="Utwórz zgłoszenie" press="onCreateServiceDialogOpen" icon="sap-icon://create" />
                </HBox>
                <Avatar displaySize="XS" displayShape="Circle" class="sapUiSmallMarginEnd sapUiSmallMarginTop" showBorder="true" backgroundColor="Accent9" press="onAvatarPress" />
            </HBox>

            <Table headerText="Lista zgłoszeń" class="sapUiSmallMarginTop" backgroundDesign="Solid" alternateRowColors="true" id="test">
                <columns>
                    <Column>
                        <Text text="Urządzenie" />
                    </Column>
                    <Column hAlign="Center">
                        <Text text="Data przyjęcia" />
                    </Column>
                    <Column popinDisplay="Inline" hAlign="Center" minScreenWidth="Tablet">
                        <Text text="Status zgłoszenia" />
                    </Column>
                    <Column hAlign="Center" popinDisplay="Inline" minScreenWidth="Tablet">
                        <Text text="Data zakończenia prac" />
                    </Column>
                    <Column hAlign="Center" popinDisplay="Inline" demandPopin="true" minScreenWidth="2500px">
                        <Text text="Data odbioru" />
                    </Column>
                    <Column hAlign="Center" popinDisplay="Inline" demandPopin="true" minScreenWidth="2500px">
                        <Text text="Status odbioru" />
                    </Column>
                    <Column hAlign="Center" popinDisplay="Inline" demandPopin="true" minScreenWidth="2500px">
                        <Text text="Cena" />
                    </Column>
                    <Column hAlign="End" width="8rem" />
                </columns>
            </Table>
        </content>
    </Page>
</mvc:View>
